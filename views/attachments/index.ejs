<header>
   <h2> <div class='pull-right'>
          <span class='badge badge-info'> <%= attachments.length %> </span>
          <i class='icon-file'></i>
        </div>
        Adjuntos </h2> 
</header>

<div class="row">
  <% for (var i in attachments) { %>

    <div class="col-md-2">

            <div class="thumbnail">

                <a href='<%= attachments[i].url %>' 
                   type='<%= attachments[i].mime %>' 
                   target='_blank'>
                     <%= attachments[i].filename %> 
                </a>

                <br />

                <em> <%= attachments[i].updatedAt.toLocaleDateString() %> </em>

                <br />

                <img src='<%= attachments[i].url%>' style='max-width:50%;' />

                <% if (session.user && session.user.id == post.AuthorId) {%>

                  <% var formname = 'fai' + i; %>
                  <form style='display:inline;'
                        method='post' 
                        action='/posts/<%= post.id %>/attachments/<%= attachments[i].id %>' 
                        id='<%= formname %>'>
                    <input type='hidden' name='_method' value='delete'>

                    <button class='btn btn-danger btn-mini' 
                       onclick="confirmarSubmit('Â¿Seguro que desea borrar la imagen?', 
                                                '<%= formname %>'); return false">
                        <i class='icon-trash icon-white'></i> Borrar
                    </button>  
                  </form>

                <% } %>            

            </div>
      </div>

   <% }; %>
</div>

<div class="row">
    <div class="col-md-2">

      <% if (session.user && session.user.id == post.AuthorId) {%>
         <a href="/posts/<%= post.id %>/attachments/new"> Crear nuevo Adjunto </a>
      <% } %>
    </div>
</div>
